<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zjzc_gp_bg_color"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <cn.bs.zjzc.div.TopBarView
            android:id="@+id/add_account_top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:title_text="添加帐号" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:background="@color/white"
            android:gravity="center"
            android:text="请保证姓名、银行卡开户人、支付宝会员为同一个人"
            android:textColor="#eb0000"
            android:textSize="28px" />


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="40px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="真实姓名："
                android:textColor="@color/zjzc_black"
                android:textSize="30px" />

            <EditText
                android:id="@+id/add_account_real_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="250px"
                android:background="@null"
                android:hint="张三"
                android:textColor="@color/zjzc_black"
                android:textColorHint="@color/zjzc_hint_text_color"
                android:textSize="30px" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <include layout="@layout/include_line" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="40px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="选择帐号："
                android:textColor="@color/zjzc_black"
                android:textSize="30px" />

            <TextView
                android:id="@+id/add_account_select_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="250px"
                android:layout_marginRight="50px"
                android:drawableRight="@mipmap/zjzc_title_spin"
                android:gravity="center_vertical"
                android:hint="请选择"
                android:textColor="@color/zjzc_black"
                android:textColorHint="@color/zjzc_hint_text_color"
                android:textSize="30px" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <include layout="@layout/include_line" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="40px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="账户号码："
                android:textColor="@color/zjzc_black"
                android:textSize="30px" />

            <EditText
                android:id="@+id/add_account_et_account_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="250px"
                android:background="@null"
                android:hint="请输入"
                android:textColor="@color/zjzc_black"
                android:textColorHint="@color/zjzc_hint_text_color"
                android:textSize="30px" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <include layout="@layout/include_line" />


    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="match_parent"
        android:layout_height="102px"
        android:layout_gravity="bottom"
        android:layout_marginBottom="1px"
        android:background="@drawable/white_bg_shadow">

        <TextView
            android:id="@+id/add_account_commit"
            android:layout_width="243px"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:background="@color/zjzc_orange_light"
            android:gravity="center"
            android:text="确认提交申请"
            android:textColor="@color/white"
            android:textSize="30px" />

    </com.zhy.autolayout.AutoFrameLayout>
</com.zhy.autolayout.AutoFrameLayout>