<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zjzc_gp_bg_color"
    android:orientation="vertical">

    <cn.bs.zjzc.div.TopBarView
        android:id="@+id/add_remark_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="添加备注" />

    <EditText
        android:id="@+id/add_remark_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20px"
        android:background="@drawable/corner_bg_white_r20_shadow"
        android:gravity="left|top"
        android:hint="添加备注（选填）"
        android:lines="4"
        android:padding="35px"
        android:textColorHint="@color/zjzc_hint_text_color"
        android:textSize="30px" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:background="@drawable/corner_bg_white_r20_shadow"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_add_photo"
            android:layout_width="wrap_content"
            android:layout_height="105px"
            android:gravity="center_vertical"
            android:paddingLeft="35px"
            android:text="添加照片（选填）"
            android:textColor="@color/zjzc_hint_text_color"
            android:textSize="30px" />


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/add_remark_photo_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="35px"
            android:orientation="horizontal"
            android:paddingLeft="20px"
            android:paddingRight="20px">

            <ImageView
                android:id="@+id/add_remark_photo1"
                android:layout_width="160px"
                android:layout_height="160px"
                android:layout_marginRight="10px"
                android:scaleType="fitXY"
                android:src="@mipmap/zjzc_btn_add_photo"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/add_remark_photo2"
                android:layout_width="160px"
                android:layout_height="160px"
                android:layout_marginRight="10px"
                android:scaleType="fitXY"
                android:src="@mipmap/zjzc_btn_add_photo"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/add_remark_photo3"
                android:layout_width="160px"
                android:layout_height="160px"
                android:layout_marginRight="10px"
                android:scaleType="fitXY"
                android:src="@mipmap/zjzc_btn_add_photo"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/add_remark_photo4"
                android:layout_width="160px"
                android:layout_height="160px"
                android:layout_marginRight="10px"
                android:scaleType="fitXY"
                android:src="@mipmap/zjzc_btn_add_photo"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/add_remark_add_photo"
                android:layout_width="160px"
                android:layout_height="160px"
                android:layout_marginRight="10px"
                android:scaleType="fitXY"
                android:src="@mipmap/zjzc_btn_add_photo" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/add_remark_confirm"
        style="@style/my_big_button_style"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="40px"
        android:text="确定" />
</com.zhy.autolayout.AutoLinearLayout>