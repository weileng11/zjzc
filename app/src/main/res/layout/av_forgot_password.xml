<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zjzc_gp_bg_color"
    android:orientation="vertical">

    <cn.bs.zjzc.div.TopBarView
        android:id="@+id/forget_password_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="找回密码" />


    <EditText
        android:id="@+id/forget_password_et_phone_number"
        style="@style/my_box_edit_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="34px"
        android:hint="请输入手机号码"
        android:inputType="number"
        android:maxLength="11" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="20px"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/forget_password_et_verification_code"
            style="@style/my_box_edit_text_style"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:layout_weight="1"
            android:hint="请输入短信验证码"
            android:inputType="number"
            android:maxLength="4" />

        <TextView
            android:id="@+id/forget_password_get_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/zjzc_btn_get_verification_code_bg"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/zjzc_orange_light" />
    </com.zhy.autolayout.AutoLinearLayout>

    <EditText
        android:id="@+id/forget_password_et_new_password"
        style="@style/my_box_edit_text_style"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="20px"
        android:hint="请输入新密码"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/forget_password_et_repeat_password"
        style="@style/my_box_edit_text_style"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="20px"
        android:hint="请再次输入新密码"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/forget_password_confirm"
        style="@style/my_big_button_style"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="120px"
        android:text="确认" />
</com.zhy.autolayout.AutoLinearLayout>