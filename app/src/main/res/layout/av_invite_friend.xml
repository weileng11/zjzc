<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.bs.zjzc.div.TopBarView
        android:id="@+id/invite_friend_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="邀请朋友" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="435px"
        android:layout_margin="20px"
        android:background="@color/zjzc_orange_light" />

    <TextView
        android:id="@+id/invite_friend_invitation_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:text="邀请码：123456"
        android:textColor="@color/zjzc_hint_text_color"
        android:textSize="26px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:text="点击以下分享"
        android:textColor="@color/zjzc_hint_text_color"
        android:textSize="26px" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/zjzc_icon_share_wechat" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#e2e3e4" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/zjzc_icon_share_moments" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#e2e3e4" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/zjzc_icon_share_qzoom" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#e2e3e4" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/zjzc_icon_share_weibo" />
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>