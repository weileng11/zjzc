<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zjzc_gp_bg_color"
    android:orientation="vertical">

    <cn.bs.zjzc.div.TopBarView
        android:id="@+id/my_wallet_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="我的钱包" />

    <cn.bs.zjzc.div.NormalOptionView
        android:id="@+id/my_wallet_account_balance"
        style="@style/my_setting_option_item_style"
        app:content_text_color="@color/zjzc_orange_light"
        app:item_title="账户余额" />

    <cn.bs.zjzc.div.NormalOptionView
        android:id="@+id/my_wallet_point"
        style="@style/my_setting_option_item_style"
        app:content_text_color="@color/zjzc_orange_light"
        app:item_title="我的积分" />

    <cn.bs.zjzc.div.NormalOptionView
        android:id="@+id/my_wallet_coupon"
        style="@style/my_setting_option_item_style"
        app:content_text_color="@color/zjzc_orange_light"
        app:item_title="我的优惠券" />

</com.zhy.autolayout.AutoLinearLayout>