<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zjzc_gp_bg_color"
    android:orientation="vertical">

    <cn.bs.zjzc.div.TopBarView
        android:id="@+id/often_address_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="常用地址" />

    <com.zhy.autolayout.AutoFrameLayout
        android:id="@+id/home_layout"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@color/white"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <TextView
            android:id="@+id/tv_home_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@mipmap/zjzc_icon_home"
            android:drawablePadding="10px"
            android:gravity="center_vertical"
            android:text="请输入家庭住址"
            android:textColor="@color/zjzc_color_grey_light"
            android:textSize="32px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:visibility="gone"
            android:id="@+id/home_address_info_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="120px"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_home_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10px"
                android:text="广州市白白云区"
                android:textColor="@color/zjzc_orange_light"
                android:textSize="32px" />

            <TextView
                android:id="@+id/tv_home_add_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三元里"
                android:textSize="26px" />

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoFrameLayout>

    <include layout="@layout/include_line" />

    <com.zhy.autolayout.AutoFrameLayout
        android:id="@+id/company_layout"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@color/white"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <TextView
            android:id="@+id/tv_company_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/zjzc_icon_company"
            android:drawablePadding="14px"
            android:gravity="center_vertical"
            android:text="请输入公司地址"
            android:textColor="@color/zjzc_color_grey_light"
            android:textSize="32px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:visibility="gone"
            android:id="@+id/company_address_info_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="120px"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_company_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10px"
                android:text="广州市白白云区"
                android:textColor="@color/zjzc_orange_light"
                android:textSize="32px" />

            <TextView
                android:id="@+id/tv_company_add_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三元里"
                android:textColor="@color/zjzc_color_grey"
                android:textSize="26px" />

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoFrameLayout>

</com.zhy.autolayout.AutoLinearLayout>