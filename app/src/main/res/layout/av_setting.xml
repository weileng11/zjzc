<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <cn.bs.zjzc.div.TopBarView
            android:id="@+id/setting_top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title_text="设置" />

        <cn.bs.zjzc.div.NormalOptionView
            android:id="@+id/option_modify_password"
            style="@style/my_setting_option_item_style"
            app:item_title="修改登录密码" />

        <cn.bs.zjzc.div.NormalOptionView
            android:id="@+id/option_set_often_use_address"
            style="@style/my_setting_option_item_style"
            app:item_title="常用地址" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/option_voice_switch"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="95px"
            android:background="@drawable/pressed_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:gravity="center_vertical"
                android:text="声音提醒"
                android:textColor="#a8a8a8"
                android:textSize="30px" />

            <cn.bs.zjzc.div.MyCheckBox
                android:id="@+id/voice_switch"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20px"
                style="@style/normal_check_box_style"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#f1f2f3" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/option_vibrator_switch"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="95px"
            android:background="@drawable/pressed_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:gravity="center_vertical"
                android:text="震动提醒"
                android:textColor="#a8a8a8"
                android:textSize="30px" />

            <cn.bs.zjzc.div.MyCheckBox
                android:id="@+id/vibrator_switch"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20px"
                style="@style/normal_check_box_style" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#f1f2f3" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <cn.bs.zjzc.div.NormalOptionView
            android:id="@+id/option_custom_service_and_help"
            style="@style/my_setting_option_item_style"
            app:item_title="客服与帮助" />

        <cn.bs.zjzc.div.NormalOptionView
            android:id="@+id/option_feedback_and_reply"
            style="@style/my_setting_option_item_style"
            app:item_title="反馈与回复" />

        <cn.bs.zjzc.div.NormalOptionView
            android:id="@+id/option_user_regulation"
            style="@style/my_setting_option_item_style"
            app:item_title="用户守则" />

        <cn.bs.zjzc.div.NormalOptionView
            android:id="@+id/option_version_upgrade"
            style="@style/my_setting_option_item_style"
            app:item_title="版本升级" />

        <cn.bs.zjzc.div.NormalOptionView
            android:id="@+id/option_about_us"
            style="@style/my_setting_option_item_style"
            app:item_title="关于易星" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="match_parent"
        android:layout_height="102px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1px"
        android:background="@drawable/white_bg_shadow">

        <TextView
            android:id="@+id/btn_logout"
            android:layout_width="243px"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:background="@color/zjzc_orange_light"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="30px" />

    </com.zhy.autolayout.AutoFrameLayout>
</com.zhy.autolayout.AutoRelativeLayout>