<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:orientation="vertical">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:gravity="center_vertical"
        android:text="请输入收货人提供的短信验证码，确认完成订单。"
        android:textSize="32px"/>

    <TextView
        android:id="@+id/btn_cant_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30px"
        android:text="未能联系上收货人,怎么办？"
        android:textColor="#ffd4b8"
        android:textSize="32px"/>

    <EditText
        android:id="@+id/et_phone_num"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginBottom="10px"
        android:background="@drawable/edit_text_box_bg"
        android:gravity="center_vertical"
        android:hint="请输入被委托人的手机号"
        android:padding="20px"
        android:textColor="#000"
        android:textColorHint="@color/zjzc_hint_text_color"
        android:textSize="30px"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/code_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10px"
            android:layout_marginRight="20px"
            android:layout_toLeftOf="@+id/btn_get_code"
            android:background="@drawable/edit_text_box_bg"
            android:hint="请输入4位收货验证码"
            android:gravity="center_vertical"
            android:paddingLeft="20px"
            android:textColor="#000"
            android:textColorHint="@color/zjzc_hint_text_color"
            android:textSize="30px"/>

        <TextView
            android:id="@+id/btn_get_code"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/corner_bg_grey_r6"
            android:gravity="center"
            android:paddingBottom="20px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="20px"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="30px"/>

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>