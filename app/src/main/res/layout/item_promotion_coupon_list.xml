<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40px">

    <ImageView
        android:id="@+id/coupon_img"
        android:layout_width="match_parent"
        android:layout_height="200px" />

    <TextView
        android:id="@+id/coupon_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/coupon_img"
        android:layout_marginBottom="40px"
        android:layout_marginTop="34px"
        android:textColor="#fe0034" />

    <TextView
        android:id="@+id/coupon_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/coupon_img"
        android:layout_marginBottom="40px"
        android:layout_marginTop="40px"
        android:textColor="#fe0034" />

    <TextView
        android:id="@+id/coupon_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coupon_condition"
        android:textColor="@color/zjzc_color_grey_light" />

    <TextView
        android:id="@+id/coupon_get_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/coupon_details"
        android:layout_marginBottom="40px"
        android:layout_marginTop="40px"
        android:textColor="@color/zjzc_color_grey_light" />


</com.zhy.autolayout.AutoRelativeLayout>